<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_search"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/top_text_subtitle_card"
        android:layout_marginEnd="@dimen/top_text_subtitle_card"
        android:layout_marginBottom="@dimen/top_text_subtitle_card"
        android:adjustViewBounds="true"
        android:background="@drawable/result_card"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_cloud_upload_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"


        android:orientation="vertical">

        <TextView
            style="@style/viewParent.headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_regular"
            android:text="Upload a file"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_regular"
            android:text="Click here to upload"
            android:textColor="@color/bottomNavigationTextColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/nav_bar_color" />
    </LinearLayout>
</LinearLayout>