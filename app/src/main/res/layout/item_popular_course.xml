<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_text_subtitle_card"
        android:layout_marginEnd="@dimen/top_text_subtitle_card"
        android:layout_marginBottom="@dimen/top_text_subtitle_card"
        android:background="@drawable/categorie"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_insert_drive_file_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"

        android:orientation="vertical">

        <TextView
            android:id="@+id/fileName"
            style="@style/viewParent.headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_regular"
            android:text="File Sample"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fileSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_regular"
            android:text="Something
"
            android:textColor="@color/bottomNavigationTextColor" />

        <TextView
            android:id="@+id/marksGiven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/nav_bar_color" />
    </LinearLayout>
</LinearLayout>